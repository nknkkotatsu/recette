
<div class="container">
  <div class="row">
    <h3 class="bg-light"><%= @worker.name %>さんの詳細ページ</h3>
    <%= form_with model: @worker, url: admin_worker_update_path(@worker.id) do |f| %>
    <table class="table  table-borderless">
  <tr>
    <td>会員ID</td>
    <td><%= @worker.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @worker.name %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @worker.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
      <%#= f.radio_button :is_deleted, false %>
        <%#= f.label :is_deleted, "有効"%>
      <%#= f.radio_button :is_deleted, true %>
        <%#= f.label :is_deleted, "退会" %>
  </tr>
   </table>
   <%= f.submit '変更を保存', class: "btn btn-success" %>
   <% end %>
  </div>
</div>