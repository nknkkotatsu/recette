<div class="container">
  <div class="row">
    <div class="col-5">
      <h3 class="bg-light">ジャンル一覧・追加</h3>
      <%= form_with model: @genre, url: worker_genres_path, method: :post do |f| %>
      <div class="form-check form-check-inline">
        <% if @worker.email == 'guest@example.com'%>
          <p>ゲストユーザーはジャンルの追加ができません。</p>
          <% else %>
          <p>ジャンル名&emsp;&emsp;<%= f.text_field :name %>&emsp;&emsp;<%= f.submit '新規登録', class:"btn btn-success" %></p>
        <% end %>
      </div>
      <% end %>
  
      <table class="table">
        <tr class="bg-light">
        <td>ジャンル</td>
        <td></td>
        </tr>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_worker_genre_path(genre), class:"btn btn-success" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>