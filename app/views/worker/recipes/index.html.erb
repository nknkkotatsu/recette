<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-md-3">
        <%= render "worker/recipes/side_bar",recipe:@recipe %>
    </div>
    <div class="col-md-9">
      <h4>レシピ一覧(全<%=@recipes.count %>件)</h4>
        <!--<div class="row row-cols-1 row-cols-md-4 g-4">-->
        <!--<div class="d-flex flex-wrap ">-->
        <div class="row">
          <% @recipes.each do |recipe| %>
            <!--<div style="width: 15rem;">-->
            <div class="col-3 mt-2">
               <div class="card text-center border-info h-100 w-100" style="width: 15rem;">
                <div class="card-body">
                    <%= link_to worker_recipe_path(recipe.id) do %>
                      <!--<p class="card-text"><%#= image_tag recipe.image, class: "w-100" %></p>-->
                      <p class="card-text"><%= image_tag recipe.get_recipe_image(300,300), class: 'img-fluid', style: 'width: 100%; height: 150px; object-fit: cover;' %> </p>
                      <p class="card-text"><%= recipe.name %></p>
                    <% end %>
                </div>
               </div>
            </div>
        <% end %>
        <div class="d-flex justify-content-center align-items-center mt-5"　style="text-align: center;">
       <%= paginate @recipes %>
       </div>
        </div>
     </div>
    </div>
  </div>
       

</div>